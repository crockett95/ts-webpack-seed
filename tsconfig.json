{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "noEmitOnError": true
  },
  "exclude": [
    ".tmp",
    "bower_components",
    "node_modules",
    "dist"
  ]
}
